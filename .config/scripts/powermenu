#!/bin/bash

# Options for powermenu
options="ğŸ”’Lock\nâ¾ Suspend\nğŸ”„ Reboot\nâ» Shutdown\nâŒ Cancel"

# Rofi Command
chosen=$(echo -e "$options" | rofi -dmenu -i -p "Power Menu:" -theme-str 'window {width: 20%;} listview {lines: 5;} entry {enabled: false;}')

case "$chosen" in
    "ğŸ”’Lock")
        hyprlock
        ;;
    "â¾ Suspend")
        systemctl suspend
        ;;
    "ğŸ”„ Reboot")
        reboot
        ;;
    "â» Shutdown")
        shutdown now
        ;;
    "âŒ Cancel")
        exit 0
        ;;
    *)
        exit 1
        ;;
esac

